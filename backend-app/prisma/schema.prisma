generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Payable {
  id           String   @id @default(uuid())
  value        Float
  emissionDate DateTime @default(now())
  assignorId   String
  assignor     Assignor @relation(fields: [assignorId], references: [id])

  @@index([assignorId], name: "assignor_idx")
}

model Assignor {
  id       String    @id @default(uuid())
  document String    @unique
  email    String    @unique
  phone    String
  name     String
  Payable  Payable[]
}

model User {
  id       String @id @default(uuid())
  login    String @unique
  password String
}
